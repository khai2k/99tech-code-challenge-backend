{
  "name": "technical-test",
  "version": "1.0.0",
  "description": "Technical Test Solutions",
  "scripts": {
    "test": "jest",
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node index.ts",
    "docker:build": "docker build -t book-management-api .",
    "docker:build:dev": "docker build --target development -t book-management-api:dev .",
    "docker:run": "docker run -p 3000:3000 --env-file .env book-management-api",
    "docker:run:dev": "docker run -p 3000:3000 -v $(pwd):/app book-management-api:dev",
    "docker:compose:up": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "docker:compose:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:compose:dev:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:compose:test": "docker-compose -f docker-compose.dev.yml --profile test up --abort-on-container-exit",
    "docker:compose:logs": "docker-compose logs -f",
    "docker:clean": "docker system prune -f && docker volume prune -f"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "better-sqlite3": "^12.2.0",
    "express": "^4.17.1",
    "express-rate-limit": "^8.1.0",
    "express-slow-down": "^3.0.0",
    "express-winston": "^4.2.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "reflect-metadata": "^0.2.2",
    "sqlite3": "^5.0.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^4.1.6",
    "typeorm": "^0.3.26",
    "uuid": "^13.0.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^4.17.13",
    "@types/express-rate-limit": "^5.1.3",
    "@types/jest": "^27.0.2",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/ms": "^2.1.0",
    "@types/node": "^16.11.7",
    "@types/sqlite3": "^3.1.7",
    "@types/supertest": "^2.0.12",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^10.0.0",
    "jest": "^27.3.1",
    "supertest": "^6.3.3",
    "swagger-autogen": "^2.23.7",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2"
  }
}
